<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageView_courseImage"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/textView_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView_courseImage"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView_courseName"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/imageView_courseImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_reservationDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Detail >"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView_writeReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:clickable="true"
                android:text="Write Review >"
                android:textSize="13dp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

</LinearLayout>